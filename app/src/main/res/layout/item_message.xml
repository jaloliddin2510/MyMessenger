<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/RV_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="14dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:strokeWidth="2dp"
            app:strokeColor="@color/pink77">
            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/message"
                android:layout_marginVertical="9dp"
                android:layout_marginHorizontal="12dp"
                android:textSize="14sp"
                android:textColor="@color/black17"/>
        </com.google.android.material.card.MaterialCardView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_message"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="13dp">
                <ImageView
                    android:id="@+id/failed_message"
                    android:visibility="gone"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="3dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/baseline_error_24" />
                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/send_progress_bar"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/send_time_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:00"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black8D"/>
                <ImageView
                    android:id="@+id/read_message"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginVertical="3dp"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/send_time_message"
                    android:background="@drawable/__icon__checkmark_circle_" />
            </RelativeLayout>
    </RelativeLayout>
</FrameLayout>