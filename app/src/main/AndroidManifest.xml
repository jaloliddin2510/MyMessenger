<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".mainUi.main.MainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/uno"
        android:label="@string/uno"
        android:roundIcon="@drawable/uno"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyMessenger"
        tools:targetApi="31">
        <activity
            android:name=".mainUi.auth.AuthenticationActivity"
            android:exported="false" />
        <activity
            android:name=".mainUi.chat.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".mainUi.sing_in.SignIn"
            android:exported="true" />
        <activity
            android:name=".mainUi.profile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".mainUi.sign_up.SignUp"
            android:exported="true" />
        <activity
            android:name=".mainUi.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MyMessenger.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>